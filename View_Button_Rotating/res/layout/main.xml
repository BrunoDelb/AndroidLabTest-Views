<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:splitMotionEvents="true">
    <Button
        android:layout_width="200dip"
        android:layout_height="150dip"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="50dip"
        android:text="Click Me"
        android:id="@+id/rotatingButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_translationx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translation X" />

        <Button
            android:id="@+id/btn_translationy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translation Y" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_setrotationx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set rotation X" />

        <Button
            android:id="@+id/btn_setrotationy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set rotation Y" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_setscalex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set scale X" />

        <Button
            android:id="@+id/btn_setscaley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set scale Y" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_rotation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value:" />

        <EditText
            android:id="@+id/et_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

</LinearLayout>
